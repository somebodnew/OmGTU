
using System;
class HelloWorld {
  static void Main() {
    //Console.WriteLine("Hello World");
    
    int l = 7, n = 5, m = 10;
    
    int[] k = new int[] {1, 2, 3, 20};
    
    foreach(int i in k)
    {
        Console.WriteLine("Ans for "+i+" gardens:");
        Console.WriteLine(2*i*((l+n)+m*(i+1)*0.5));
        
    }
  }
}
